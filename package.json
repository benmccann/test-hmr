{
  "name": "svelte-hmr-tests",
  "version": "0.0.0",
  "description": "Test suite for svelte HMR",
  "main": "index.js",
  "scripts": {
    "test": "mocha test-utils/bootstrap.js test",
    "test:watch": "npm run test -- --watch",
    "test:debug": "mocha debug test-utils/bootstrap.js test",
    "test:self": "mocha test-utils/bootstrap.js test-utils/test",
    "test:self:watch": "E2E=0 npm run test:self -- --watch",
    "test:self:debug": "mocha debug test-utils/bootstrap.js test-utils/test",
    "test:all": "mocha test-utils/bootstrap.js test-utils/test test",
    "test:all:watch": "E2E=0 npm run test:all -- --watch",
    "test:all:debug": "mocha debug test-utils/bootstrap.js test-utils/test test",
    "parser": "npx pegjs test-utils/hmr-spec-parser.pegjs",
    "parser:trace": "npx pegjs --trace test-utils/hmr-spec-parser.pegjs",
    "parser:watch": "nodemon --exec 'npx pegjs test-utils/hmr-spec-parser.pegjs' -w test-utils/hmr-spec-parser.pegjs",
    "parser:watch:trace": "nodemon --exec 'npx pegjs --trace test-utils/hmr-spec-parser.pegjs' -w test-utils/hmr-spec-parser.pegjs"
  },
  "author": "rixo <rixo@rixo.fr>",
  "license": "MIT",
  "dependencies": {
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "express": "^4.17.1",
    "fast-glob": "^3.0.4",
    "glob": "^7.1.4",
    "linkfs": "^2.1.0",
    "memory-fs": "^0.4.1",
    "mocha": "^6.1.4",
    "mocha-unfunk-reporter": "^0.4.0",
    "node-fetch": "^2.6.0",
    "puppeteer": "^1.18.1",
    "sanitize-html": "^1.20.1",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "unionfs": "^4.1.0"
  },
  "devDependencies": {
    "@rixo/eslint-config": "^0.7.0-alpha.7",
    "dedent": "^0.7.0",
    "pegjs": "^0.10.0"
  }
}
