{
  "name": "test-hmr",
  "version": "0.1.0-2",
  "description": "Testbed for webpack HMR",
  "keywords": "webpack hmr test",
  "main": "index.js",
  "bin": {
    "thc": "./cli.js"
  },
  "scripts": {
    "test": "E2E=skip mocha",
    "test:watch": "WATCH=1 E2E=0 mocha --watch",
    "test:debug": "mocha debug",
    "parser": "npx pegjs --allowed-start-rules Spec,FullSpec,TitleOnly lib/hmr-spec/hmr-spec-parser.pegjs",
    "parser:trace": "npx pegjs --allowed-start-rules Spec,FullSpec,TitleOnly --trace lib/hmr-spec/hmr-spec-parser.pegjs",
    "parser:watch": "nodemon --exec 'npm run parser' -w lib/hmr-spec/hmr-spec-parser.pegjs",
    "parser:watch:trace": "nodemon --exec 'npm run parser:trace' -w lib/hmr-spec/hmr-spec-parser.pegjs"
  },
  "author": "rixo <rixo@rixo.fr>",
  "license": "MIT",
  "peerDependencies": {
    "nollup": "^0.7.4",
    "webpack": ">=4.0.0",
    "webpack-dev-server": ">=3.0.0"
  },
  "dependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-spies": "^1.0.0",
    "chokidar": "^3.3.0",
    "debug": "^4.1.1",
    "dedent": "^0.7.0",
    "del": "^5.1.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "fast-glob": "^3.0.4",
    "linkfs": "^2.1.0",
    "lodash.escaperegexp": "^4.1.2",
    "lodash.set": "^4.3.2",
    "memory-fs": "^0.4.1",
    "mocha": "^6.1.4",
    "mocha-unfunk-reporter": "^0.4.0",
    "node-fetch": "^2.6.0",
    "proxyquire": "^2.1.3",
    "puppeteer": "^1.18.1",
    "rewiremock": "^3.13.9",
    "sanitize-html": "^1.20.1",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "unionfs": "^4.1.0"
  },
  "devDependencies": {
    "@rixo/eslint-config": "^0.7.1-alpha.0",
    "cheap-watch": "^1.0.2",
    "pegjs": "^0.10.0"
  }
}
